<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.versatiledevs.logicane.Admin">

    <TextView
        android:id="@+id/adminText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Admin"
        android:layout_margin="16dp"
        android:textSize="35dp"
        />

    <Button
        android:id="@+id/buttonNewUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/adminText"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:onClick="newUser"
        android:text="New User"/>
    <Button
        android:id="@+id/buttonDeleteUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonNewUser"
        android:layout_centerHorizontal="true"
        android:onClick="deleteUser"
        android:layout_margin="16dp"
        android:text="Delete User"/>

    <Button
        android:id="@+id/bTest"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDeleteUser"
        android:layout_centerHorizontal="true"
        android:onClick="deleteData"
        android:layout_margin="16dp"
        android:text="Delete Data"/>

</RelativeLayout>
